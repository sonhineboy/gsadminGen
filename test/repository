package repositorys

import (
	"github.com/sonhineboy/gsadmin/service/app/models"
	"github.com/sonhineboy/gsadmin/service/app/requests"
	"github.com/sonhineboy/gsadmin/service/global"
	"gorm.io/gorm"
)

type UserRepository struct {
	db *gorm.DB
}

// NewUserRepository 实例化
func NewUserRepository() *UserRepository {
	return &UserRepository{
		db: global.Db,
	}
}

//FindById 根据id 查询信息
func (re *UserRepository) FindById(id int) (models.User, error) {
	var (
		model models.User
	)
	tx := re.db.First(&model, id)

	return model, global.GormTans(tx.Error)
}

//UpdateById 根据id 更新信息
func (re *UserRepository) UpdateById(id int, data requests.UserRequest) (int64, error) {
	var (
		model models.User
	)
	tx := re.db.Model(&model).Where("id = ?", id).Updates(models.User{
		UserName:	data.UserName
		Age:	data.Age
		
	})
	return tx.RowsAffected, tx.Error
}

//DelByIds 根据id 删除数据
func (re *UserRepository) DelByIds(ids []int) (int64, error) {
	var (
		model models.User
	)
	tx := re.db.Delete(&model, ids)
	return tx.RowsAffected, tx.Error
}

//Page 返回分页数据
func (re *UserRepository) Page(where map[string]interface{}, page int, pageSize int, sortField string) map[string]interface{} {
	var (
		total  int64
		data   []models.User
		offSet int
	)
	db := global.Db.Model(&models.User{})

	if where != nil && len(where) > 0 {
		db.Where(where)
	}
	db.Count(&total)

	if page <= 0 {
		page = 1
	}
	offSet = (page - 1) * pageSize
	db.Preload("Menus").Limit(pageSize).Order(sortField + " desc" + ",id desc").Offset(offSet)
	db.Find(&data)
	return global.Pages(page, pageSize, int(total), data)
}

//Insert 写入数据
func (re *UserRepository) Insert(data requests.UserRequest) (model models.User, err error) {

	model = models.User{
		UserName:	data.UserName
		Age:	data.Age
		
	}

	result := re.db.Create(&model)
	err = result.Error
	return model, err
}
